# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend URL
CLIENT_URL=http://localhost:5173
PRODUCTION_URL=https://dashboard-chat.kinsta.app

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dashboard_chat
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_VERSION=v17.0

# Relevance AI Configuration
RELEVANCE_API_KEY=your_relevance_ai_api_key
RELEVANCE_API_URL=https://api.relevanceai.com/latest
RELEVANCE_QUOTE_TOOL_ID=your_quote_generation_tool_id

# Business Configuration
BUSINESS_NAME=La Tua Azienda
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
TIMEZONE=Europe/Rome

# Auto Assignment Rules
AUTO_ASSIGNMENT_ENABLED=true
MAX_CONCURRENT_CHATS_PER_OPERATOR=5
CHAT_TIMEOUT_MINUTES=30